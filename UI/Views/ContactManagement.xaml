<UserControl x:Class="DCSBase.Contacts.ContactManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:DCSBase"
        xmlns:contact="clr-namespace:DCSBase.Contacts" d:DataContext="{d:DesignInstance Type=contact:ContactManagementViewModel}"
        mc:Ignorable="d"
        MinHeight="450" MinWidth="800" Height="auto" Width="auto">

    <UserControl.Resources>
        <DataTemplate DataType="ListBoxItem">
            
            <Grid Margin="0" Width="300">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                
                <TextBlock FontWeight="SemiBold" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="0, 0, 20, 0" />
                <TextBlock FontWeight="Bold" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="20, 0, 0, 0"/>
                <TextBlock Grid.Row="1" Text="Email: " />
                <TextBlock Grid.Row="1" Foreground="Blue" Margin="40,0,0,0" 
                Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <TextBlock Grid.Row="1" Grid.Column="1" Text="Telefon: " />
                <TextBlock Grid.Row="1" Foreground="Blue" Grid.Column="1" Margin="40,0,0,0" 
                Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0">
            <Grid>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="Kontakt suchen: " HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0"/>
                <telerik:RadAutoCompleteBox Grid.Column="1" MinWidth="150" x:Name="SearchContactBox" TextSearchMode="Contains" DisplayMemberPath="LastName" SelectionChanged="SearchContactBox_SelectionChanged" ItemsSource="{Binding Collection, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

            </Grid>
        </Border>

        <telerik:RadGridView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" ItemsSource="{Binding Collection, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" AutoGenerateColumns="True" IsReadOnly="True" x:Name="MainGridView">
            
        </telerik:RadGridView>


        <Grid Name="ContactStatsGridView" Grid.Column="1">

            <TabControl x:Name="ContactStatsContentControl" TabStripPlacement="Top" Margin="5" Visibility="Collapsed">

            </TabControl>

        </Grid>

    </Grid>

</UserControl>
