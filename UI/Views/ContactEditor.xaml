<local:DefaultObjectEditorWindow x:Class="DCSBase.Contacts.ContactEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:DCSBase"
        xmlns:contact="clr-namespace:DCSBase.Contacts"
        xmlns:service="clr-namespace:DCSBase.Services"
        mc:Ignorable="d" Title="Neuen Kontakt anlegen"
        MinHeight="220" MinWidth="600" SizeToContent="WidthAndHeight">

    <Grid Background="White">

        <Grid.Resources>
            <ResourceDictionary Source="\Resources\ResourceDictionarys\MainResourceTemplate.xaml"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <ContentControl x:Name="ContactContentControl" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">

            <Grid>

                <Grid.Resources>
                    <DataTemplate x:Key="ListItemTemplate">

                        <Grid MinWidth="200" VerticalAlignment="Center" HorizontalAlignment="Center">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left">
                                <TextBlock FontWeight="Bold" FontSize="12" Text="{Binding Path=StreetName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="0"/>
                                <TextBlock FontWeight="Bold" FontSize="12" Text="{Binding Path=HouseNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="5,0,0,0"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left">
                                <TextBlock FontSize="8" Text="{Binding Path=PostalCode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="0"/>
                                <TextBlock FontSize="8" Text="{Binding Path=City, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="5,0,0,0" Foreground="DeepSkyBlue"/>
                            </StackPanel>

                            <Border Grid.Column="1" HorizontalAlignment="Center">
                                
                            </Border>

                            <Button Content="X" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" CommandParameter="{Binding}" Margin="2" Click="RemoveFromList_Click" ToolTip="Adresse entfernen" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}"/>
                        </Grid>

                    </DataTemplate>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Vorname " Style="{DynamicResource Label}"/>
                <telerik:RadWatermarkTextBox Grid.Row="0" Grid.Column="1" x:Name="FirstNameTextBox" MinWidth="150" WatermarkContent="Vorname eingeben" WatermarkBehavior="HideOnTextEntered" Margin="2" Text="{Binding Path=FirstName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

                <Label Content="Nachname " Grid.Row="0" Grid.Column="2" Style="{DynamicResource Label}"/>
                <telerik:RadWatermarkTextBox Grid.Row="0" Grid.Column="4" x:Name="LastNameTextBox" Text="{Binding Path=LastName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MinWidth="150" WatermarkContent="Nachname eingeben" WatermarkBehavior="HideOnTextEntered" Margin="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

                <Label Content="Straße + Hausnummer " Grid.Row="1" Grid.Column="0" Style="{DynamicResource Label}"/>
                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <telerik:RadWatermarkTextBox x:Name="StreetNameTextBox" Text="{Binding Path=StreetName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MinWidth="150" WatermarkContent="Straßenname" WatermarkBehavior="HideOnTextEntered" Margin="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                    <telerik:RadWatermarkTextBox x:Name="HouseNumberTextBox" Text="{Binding Path=HouseNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MinWidth="50" WatermarkContent="Nr." WatermarkBehavior="HideOnTextEntered" Margin="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                </StackPanel>

                <Label Content="Postleitzahl + Stadt " Grid.Row="2" Grid.Column="0" Style="{DynamicResource Label}"/>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <telerik:RadWatermarkTextBox x:Name="PostalCodeTextBox" Text="{Binding Path=PostalCode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MinWidth="50" WatermarkContent="PtlZhl" WatermarkBehavior="HideOnTextEntered" Margin="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                    <telerik:RadWatermarkTextBox x:Name="CityTextBox" Text="{Binding Path=City, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MinWidth="150" WatermarkContent="Stadt" WatermarkBehavior="HideOnTextEntered" Margin="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                </StackPanel>

                <Label Content="Land " Grid.Row="3" Grid.Column="0" Style="{DynamicResource Label}"/>
                <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" Margin="2">
                    <telerik:RadWatermarkTextBox x:Name="CountryTextBox" Text="{Binding Path=Country, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MinWidth="150" WatermarkContent="Land" WatermarkBehavior="HideOnTextEntered" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                    <Button Name="AddPhysicalAdressButton" Style="{DynamicResource ButtonAdd/Remove}" Click="AddPhysicalAdressButton_Click" ToolTip="Adresse hinzufügen" Margin="2" Background="{x:Null}" BorderBrush="{x:Null}">
                        <Image Source="\Resources\Images\add2.png" Width="16" Height="16"/>
                    </Button>
                </StackPanel>

                <ListBox Name="PhysicalAdressListBox" SelectionChanged="PhysicalAdressListBox_SelectionChanged" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" SelectedItem="{Binding SelectedAdress, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" ItemTemplate="{StaticResource ListItemTemplate}" ItemsSource="{Binding Path=ContactAdresses, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="1" Margin="3" Grid.Column="2" Grid.RowSpan="3" Grid.ColumnSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                </ListBox>

            </Grid>

        </ContentControl>

        <ContentControl x:Name="PhoneContentControl" Grid.Row="1" Grid.Column="1">

            <Grid Background="White">

                <Grid.Resources>
                    <DataTemplate x:Key="ListItemTemplate">

                        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                            <Button Content="X" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="2" CommandParameter="{Binding}" Click="RemoveFromList_Click" ToolTip="Telefonnummer entfernen" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}"/>
                        </Grid>

                    </DataTemplate>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="Telefonnummer " Grid.Row="0" Grid.Column="0" Style="{DynamicResource Label}"/>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBox x:Name="PhoneNumberTextBox" Grid.Row="0" Grid.Column="1" Style="{DynamicResource EditorTextBox}"/>
                    <Button x:Name="AddPhoneNumber" Click="AddPhoneNumber_Click" Height="20" Width="20" BorderBrush="{x:Null}" Background="{x:Null}">
                        <Image Source="\Resources\Images\add2.png" Width="16" Height="16"/>
                    </Button>
                </StackPanel>

                <ListBox Name="PhoneNumberListBox" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ItemTemplate="{StaticResource ListItemTemplate}" SelectionChanged="PhoneNumberListBox_SelectionChanged" Visibility="Collapsed" SelectedItem="{Binding SelectedPhoneNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" ItemsSource="{Binding Path=ContactPhoneNumbers, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="5" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">

                </ListBox>

            </Grid>

        </ContentControl>

        <ContentControl x:Name="EmailContentControl" Grid.Row="1" Grid.Column="0">

            <Grid Background="White">

                <Grid.Resources>
                    <DataTemplate x:Key="ListItemTemplate">

                        <Grid MinWidth="200" VerticalAlignment="Center" HorizontalAlignment="Center">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding MailAdress, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                            <Button Content="X" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="2" CommandParameter="{Binding}" Click="RemoveFromList_Click" ToolTip="Email Adresse entfernen" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}"/>
                        </Grid>

                    </DataTemplate>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="Email-Adresse " Grid.Row="0" Grid.Column="0" Style="{DynamicResource Label}"/>
                <telerik:RadAutoCompleteBox Grid.Row="0" Grid.Column="1" x:Name="EmailAdressTextBox" Width="200" Margin="5, 5, 0, 5" DisplayMemberPath="MailAdress" TextSearchMode="Contains" SelectionMode="Single" SelectionChanged="EmailAdressTextBox_SelectionChanged" PreviewKeyDown="EmailAdressTextBox_PreviewKeyDown" ItemsSource="{Binding ContactEmails, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                <telerik:RadListBox Name="EmailAdressListBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" ItemTemplate="{StaticResource ListItemTemplate}" SelectionChanged="EmailAdressListBox_SelectionChanged" Visibility="Collapsed" SelectedItem="{Binding SelectedEmailAdress, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" ItemsSource="{Binding Path=ContactEmails, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="5">

                </telerik:RadListBox>

            </Grid>

        </ContentControl>

    </Grid>

</local:DefaultObjectEditorWindow>
