<local:DefaultAppControl x:Class="DCSBase.Contacts.EmailAdressEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DCSBase"
             xmlns:contact="clr-namespace:DCSBase.Contacts"
             xmlns:windows="clr-namespace:DCSBase"
             mc:Ignorable="d" 
             MinHeight="150" MinWidth="350" Width="auto" Height="auto">

    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Label Content="Email-Adresse: " Grid.Row="0" Grid.Column="0" Style="{DynamicResource Label}"/>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
            <TextBox x:Name="EmailAdressTextBox" Width="200" Style="{DynamicResource TextBox}" Margin="5, 5, 0, 5"/>
            <Button x:Name="AddEmailAdress" Click="AddEmailAdress_Click" Height="20" Width="20" BorderBrush="{x:Null}" Background="{x:Null}">
                <Image Source="\Images\add2.png" Width="16" Height="16"/>
            </Button>
        </StackPanel>

        <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Header="Email-Adressen" Name="EmailAdressGroupBox">
            <ListView x:Name="EmailAdressListView" ItemsSource="{Binding EmailAdresses, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" BorderBrush="{x:Null}">
                
            </ListView>
        </GroupBox>

    </Grid>
    
</local:DefaultAppControl>
