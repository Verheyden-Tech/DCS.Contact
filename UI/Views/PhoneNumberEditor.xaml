<win:DefaultAppControl x:Class="DCS.Contact.UI.PhoneNumberEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DCS.Contact"
             xmlns:win="clr-namespace:DCS.DefaultViewControls;assembly=DCS.DefaultViewControls"
             mc:Ignorable="d" 
             MinHeight="250" MinWidth="400" Height="auto" Width="auto">

    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Label Content="Telefonnummer: " Grid.Row="0" Grid.Column="0" Style="{DynamicResource Label}"/>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBox x:Name="PhoneNumberTextBox" Grid.Row="0" Grid.Column="1" Style="{DynamicResource TextBox}"/>
            <Button x:Name="AddPhoneNumber" Click="AddPhoneNumber_Click" Height="20" Width="20" BorderBrush="{x:Null}" Background="{x:Null}">
                <Image Source="\Images\add2.png" Width="16" Height="16"/>
            </Button>
        </StackPanel>

        <GroupBox x:Name="PhoneNumberGroupBox" Header="Telefonnummern" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <ListView x:Name="PhoneNumberListView" DisplayMemberPath="PhoneNumber" ItemsSource="{Binding PhoneNumbers, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" BorderBrush="{x:Null}">
                
            </ListView>
        </GroupBox>

    </Grid>
    
</win:DefaultAppControl>
