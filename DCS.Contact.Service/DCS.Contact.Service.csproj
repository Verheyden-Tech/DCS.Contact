<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0-windows</TargetFramework>
	  <Version>1.0.701.0</Version>
	  <AssemblyVersion>1.0.701.0</AssemblyVersion>
	  <ApplicationVersion>1.0.701.0</ApplicationVersion>
	  <OutputType>Library</OutputType>
	  <Authors>Tobias Verheyden</Authors>
	  <Company>Verheyden Tech</Company>
	  <Description>Contact management for DCS.</Description>
	  <RootNamespace>DCS.Contact</RootNamespace>
	  <AssemblyName>DCS.Contact.Service</AssemblyName>
	  <AssemblyType>Service</AssemblyType>
	  <PackageTags>DCS</PackageTags>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
	  <UseWPF>true</UseWPF>
	  <ImplicitUsings>enable</ImplicitUsings>
	  <Nullable>enable</Nullable>
	  <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	  <PackageOutputPath>Nuget</PackageOutputPath>
	  <EnableNETAnalyzers>True</EnableNETAnalyzers>
	  <GenerateDocumentationFile>True</GenerateDocumentationFile>
	  <DocumentationFile>Documentation\API.Documentation</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Documentation\**" />
    <Compile Remove="Nuget\**" />
    <EmbeddedResource Remove="Documentation\**" />
    <EmbeddedResource Remove="Nuget\**" />
    <None Remove="Documentation\**" />
    <None Remove="Nuget\**" />
    <Page Remove="Documentation\**" />
    <Page Remove="Nuget\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DCS.CoreLib" Version="1.1.201" />
    <PackageReference Include="DCS.Data" Version="1.0.401" />
    <PackageReference Include="DCS.User" Version="1.0.2801.1" />
    <PackageReference Include="DCS.User.Service" Version="1.0.2801.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DCS.Contact.Data\DCS.Contact.Data.csproj" />
    <ProjectReference Include="..\DCS.Contact\DCS.Contact.csproj" />
  </ItemGroup>

</Project>
