<win:DefaultEditorWindow x:Class="DCS.Contact.UI.EmailAdressEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCS.Contact.UI"
        xmlns:win="clr-namespace:DCS.CoreLib.View;assembly=DCS.CoreLib.View"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        mc:Ignorable="d"
        Title="EmailAdressEditor" MinHeight="60" MinWidth="500" SizeToContent="WidthAndHeight">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <telerik:RadWatermarkTextBox x:Name="EmailAdressNameTextBox" Grid.Column="0" Text="{Binding MailAdress, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" WatermarkContent="Email-Adresse" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>

        <telerik:RadAutoSuggestBox x:Name="EmailAdressTypeBox" WatermarkContent="Email-Adressen Typ suchen.." Grid.Column="1" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>

        <telerik:RadButton x:Name="CreateNewEmailTypeButton" Grid.Column="2" Background="{x:Null}" BorderBrush="{x:Null}" ToolTip="Neuen Email-Adressen Typ erstellen" Margin="5" Click="CreateNewEmailTypeButton_Click" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <Image Source="{telerik:RadGlyph Size=16, Glyph=&#xe11e;}" Width="16" Height="16" Stretch="UniformToFill"/>
        </telerik:RadButton>
        
    </Grid>
    
</win:DefaultEditorWindow>
