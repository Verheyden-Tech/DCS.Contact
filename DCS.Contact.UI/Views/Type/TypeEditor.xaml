<Window x:Class="DCS.Contact.UI.TypeEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCS.Contact.UI"
        xmlns:win="clr-namespace:DCS.CoreLib.View;assembly=DCS.CoreLib.View"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        mc:Ignorable="d"
        Title="Neuen Typ erstellen" MinHeight="60" MinWidth="300" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <telerik:RadWatermarkTextBox x:Name="TypeNameTextBox" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" WatermarkContent="Neuen Typ Namen festlegen.." Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>

        <telerik:RadButton x:Name="SaveTypeButton" Grid.Row="0" Grid.Column="1" ToolTip="Neuen Typ erstellen und hinzufügen" Click="SaveTypeButton_Click" Background="{x:Null}" BorderBrush="{x:Null}" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <Image Source="{telerik:RadGlyph Size=16, Glyph=&#xe118;}" Width="16" Height="16" Stretch="UniformToFill"/>
        </telerik:RadButton>
        
    </Grid>
    
</Window>
