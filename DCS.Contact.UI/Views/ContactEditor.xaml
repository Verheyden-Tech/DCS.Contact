<win:DefaultEditorWindow x:Class="DCS.Contact.UI.ContactEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:DCS.Contact.UI"
        xmlns:win="clr-namespace:DCS.CoreLib.View;assembly=DCS.CoreLib.View"
        mc:Ignorable="d" Title="Neuen Kontakt anlegen" d:DataContext="{d:DesignInstance Type=local:ContactViewModel}"
        MinHeight="200" MinWidth="400" SizeToContent="WidthAndHeight">

    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <telerik:RadButton x:Name="AddContactProfilePicture" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" MinWidth="64" Background="{x:Null}" Click="AddContactProfilePicture_Click" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                <Image Source="{telerik:RadGlyph Size=32, Glyph=&#xe652;}" Width="32" Height="32" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </telerik:RadButton>
            <Image x:Name="ContactProfilePicture" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Source="{Binding ProfilePicturePath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MinWidth="64" Stretch="Uniform" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Collapsed"/>

            <telerik:RadWatermarkTextBox Grid.Row="0" Grid.Column="1" x:Name="FirstNameTextBox" MinWidth="150" WatermarkContent="Vorname" WatermarkBehavior="HideOnTextEntered" Margin="5" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

            <telerik:RadWatermarkTextBox Grid.Row="0" Grid.Column="2" x:Name="LastNameTextBox" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MinWidth="150" WatermarkContent="Nachname" WatermarkBehavior="HideOnTextEntered" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

            <telerik:RadWatermarkTextBox x:Name="StreetNameTextBox" Grid.Row="1" Grid.Column="1" Text="{Binding ContactStreetName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MinWidth="150" WatermarkContent="Straßenname" WatermarkBehavior="HideOnTextEntered" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            <telerik:RadWatermarkTextBox x:Name="HouseNumberTextBox" Grid.Row="1" Grid.Column="2" Text="{Binding ContactHouseNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MinWidth="50" WatermarkContent="Hausnummer" WatermarkBehavior="HideOnTextEntered" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>


            <telerik:RadWatermarkTextBox x:Name="PostalCodeTextBox" Grid.Row="2" Grid.Column="1" Text="{Binding ContactPostalCode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MinWidth="50" WatermarkContent="Postleitzahl" WatermarkBehavior="HideOnTextEntered" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            <telerik:RadWatermarkTextBox x:Name="CityTextBox" Grid.Row="2" Grid.Column="2" Text="{Binding ContactCity, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MinWidth="150" WatermarkContent="Stadt" WatermarkBehavior="HideOnTextEntered" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

            <telerik:RadAutoSuggestBox x:Name="CountryTextBox" Grid.Row="3" Grid.Column="1"  Text="{Binding ContactCountry, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="5" MinWidth="150" WatermarkContent="Land suchen.." WatermarkBehavior="HideOnTextEntered" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

            <telerik:RadButton Grid.Row="3" Grid.Column="2" x:Name="UpdateAdressButton" Background="{x:Null}" BorderBrush="{x:Null}" ToolTip="Adresse übernehmen" Click="UpdateAdressButton_Click" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Right" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Image Source="{telerik:RadGlyph Size=1, Type=Image, Glyph=&#xe118;}" Width="16" Height="16"/>
            </telerik:RadButton>
        </Grid>

        <Grid Background="White" Grid.Row="1" Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <telerik:RadWatermarkTextBox Grid.Row="0" Grid.Column="0" x:Name="PhoneNumberTextBox" WatermarkContent="Telefonnummer/-n" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
            <telerik:RadButton x:Name="AddPhoneNumberButton" Grid.Row="0" Grid.Column="1" Click="AddPhoneNumberButton_Click" Margin="5" Background="{x:Null}" BorderBrush="{x:Null}" ToolTip="Neue Telefonnummer hinzufügen" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                <Image Source="{telerik:RadGlyph Size=16, Glyph=&#xe11e;}" Width="8" Height="8" Stretch="Uniform"/>
            </telerik:RadButton>

            <GroupBox x:Name="PhoneNumberGroupBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Header="Telefonnummer/-n" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <ListView Name="PhoneNumberListBox" Margin="5" SelectionChanged="PhoneNumberListBox_SelectionChanged" ItemsSource="{Binding ContactPhoneNumbers, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Background="{x:Null}" BorderBrush="{x:Null}" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <ListView.ItemTemplate>
                        <DataTemplate>

                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding DataContext.PhoneNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="2" TextAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Column="1" Text="{Binding DataContext.Type, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="2" TextAlignment="Right" VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
                                <telerik:RadButton x:Name="RemoveEmailAdressButton" Grid.Column="2" Background="{x:Null}" BorderBrush="{x:Null}" Margin="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="RemoveFromList_Click">
                                    <Image Source="{telerik:RadGlyph Size=8, Glyph=	&#xe11b;}" Width="8" Height="8" Stretch="Uniform"/>
                                </telerik:RadButton>

                            </Grid>

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </GroupBox>

        </Grid>

        <Grid Background="White" Grid.Row="1" Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <telerik:RadWatermarkTextBox Grid.Row="0" Grid.Column="0" x:Name="EmailAdressTextBox" Margin="5" WatermarkContent="Email-Adresse/-n" Text="{Binding EmailAdress, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <telerik:RadButton x:Name="AddEmailAdressButton" Grid.Row="0" Grid.Column="1" Click="AddEmailAdressButton_Click" ToolTip="Neue Email-Adresse hinzufügen" Background="{x:Null}" BorderBrush="{x:Null}" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                <Image Source="{telerik:RadGlyph Size=16, Glyph=&#xe11e;}" Width="8" Height="8"/>
            </telerik:RadButton>

            <GroupBox x:Name="EmailAdressGroupBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Header="Email-Adresse/-n" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <ListView x:Name="EmailAdressListView" BorderBrush="{x:Null}" Background="{x:Null}" ItemsSource="{Binding ContactEmailAdresses, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="5" SelectionChanged="EmailAdressListBox_SelectionChanged" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding DataContext.MailAdress, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="2" TextAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Column="1" Text="{Binding DataContext.Type, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="2" TextAlignment="Right" VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
                                <telerik:RadButton x:Name="RemoveEmailAdressButton" Grid.Column="3" Background="{x:Null}" BorderBrush="{x:Null}" Margin="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="RemoveFromList_Click">
                                    <Image Source="{telerik:RadGlyph Size=8, Glyph=	&#xe11b;}" Width="8" Height="8" Stretch="Uniform"/>
                                </telerik:RadButton>

                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </GroupBox>

        </Grid>

    </Grid>

</win:DefaultEditorWindow>
