<win:DefaultAppControl x:Class="DCS.Contact.UI.ContactManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:DCS.Contact.UI"
        xmlns:win="clr-namespace:DCS.CoreLib.View;assembly=DCS.CoreLib.View"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">

        <Grid.ContextMenu>
            <ContextMenu Name="ContactManagementContextMenu">
                <MenuItem Header="Neuer Kontakt" Name="NewContactContextMenu" Icon="{telerik:RadGlyph Type=Image, Size=8, Glyph=&#xe11e;}" Click="NewContact_Click"/>
                <MenuItem Header="Kontakt bearbeiten" Name="EditContactContextMenu" Icon="{telerik:RadGlyph Type=Image, Size=8, Glyph=&#xe10b;}" Click="EditContact_Click"/>
                <MenuItem Header="Kontakt löschen" Name="DeleteContactContextMenu" Icon="{telerik:RadGlyph Type=Image, Size=8, Glyph=&#xe10c;}" Click="DeleteContact_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <telerik:RadAutoSuggestBox x:Name="SearchContactBox" Grid.Row="0" Grid.Column="0" QuerySubmitted="SearchContactBox_QuerySubmitted" WatermarkContent="Kontakt suchen.." Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
        <telerik:RadButton x:Name="AddNewContact" Grid.Row="0" Grid.Column="1" Content="Neuen Kontakt erstellen" CornerRadius="5" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

        <telerik:RadGridView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" ItemsSource="{Binding Collection, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" AutoGenerateColumns="False" RowIndicatorVisibility="Visible" IsReadOnly="True" x:Name="MainGridView">
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding LastName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Header="Nachname" MinWidth="150"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding FirstName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Header="Vorname" MinWidth="150"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding ContactAdress, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Header="Adresse" MinWidth="250"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding ContactPhoneNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Header="Telefonnummer" MinWidth="150"/>
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>

    </Grid>

</win:DefaultAppControl>
